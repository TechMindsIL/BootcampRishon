<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- <title>Responsive Navigation Bar</title> -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <!-- jquery -->
  <script
  src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity=""
  crossorigin=""
></script>
  <!-- hamburger dropdown -->
  <link rel="stylesheet" href="/css/hamburger_dropdown.css"/>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

    body::before {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: linear-gradient(to right bottom,
          #75a9e1,
          #69abe0,
          #e0a476,
          #f0cb94,
          #f9d2a0);
      background-repeat: no-repeat;
      z-index: -1;
    }

    body {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
      background-color: rgb(240, 240, 240);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
    }

    .topmenu {
      background-color: transparent;
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      background-image: linear-gradient(120deg,
          rgba(255, 255, 255, 0.486),
          rgba(240, 120, 8, 0.3));
      padding: 10px 20px;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
      color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
    }

    .username-container {
      display: flex;
      flex-direction: row;
      align-items: center;
    }

    .username {
      color: #2d2d3a;
      font-size: 2em;
      font-weight: 600;
      padding-right: 2rem;
      white-space: nowrap;
      font-family: Poppins;
      margin: 0;
    }

    .logo {
      height: 50px;
    }

    .navbar {
      background-color: transparent;
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      background-image: linear-gradient(120deg,
          rgba(255, 255, 255, 0.486),
          rgba(240, 120, 8, 0.3));
      width: 100%;
      height: auto;
      z-index: 1000;
      box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.3);
    }

    .nav__link {
      display: flex;
      align-items: center;

      text-decoration: none;
      font-family: Poppins;
      font-size: 2.5em;
      font-weight: 500;
      transition: color 0.3s;

      padding: 5px;
    }

    .nav__link i {
      color: #000000;
    }

    .nav__link i:hover {
      color: #c95c04 !important;
      text-decoration: none !important;
    }

    @media (max-width: 768px) {
      .navbar {
        padding: 0 10px;
      }

      .username {
        font-size: 1.7em;
      }

      .nav__link {
        font-size: 2.5em;
      }
    }

    @media (max-width: 480px) {
      .navbar {
        padding: 0 5px;
      }

      .logo {
        height: 35px;
      }

      .username {
        font-size: 1.5em;
      }

      .nav__link {
        font-size: 2em;
      }
    }
  </style>
  <script>
    function initDropDownMenu(isLoggedIn, isAdmin) {
      const ul = document.querySelector(".hamburger-dropdown-menu ul");
      let menus = [];

      if (isLoggedIn) {
        if (isAdmin) {
          menus.push({ text: "ניהול", href: "/admin" });
        }
        menus.push({ text: "כל האימונים", href: "/chooseRoute" });
        menus.push({ text: "הפרופיל שלי", href: "/myprofile" });
        menus.push({ text: "האימונים שלי", href: "/MyWorkouts" });
        menus.push({ text: "על מקום ראשון", href: "/about" });
        menus.push({ text: "התנתקות", href: "/logout", id: "logout-link" });
      } else {
        menus.push({ text: "כל האימונים", href: "/chooseRoute" });
        menus.push({ text: "התחברות", href: "/login" });
        menus.push({ text: "הרשמה", href: "/register" });
        menus.push({ text: "על מקום ראשון", href: "/about" });
      }
      for (const menu of menus) {
        const li = document.createElement("li");
        const a = document.createElement("a");
        a.href = menu.href;
        a.textContent = menu.text;
        if (menu.id) {
          a.id = menu.id;
        }
        li.appendChild(a);
        ul.appendChild(li);
      }

      const logoutLink = document.getElementById("logout-link");
      console.log(logoutLink);
      if (logoutLink) {
        logoutLink.addEventListener("click", async function (event) {
          event.preventDefault(); // Prevent the default action
          event.stopPropagation(); // Stop the event from bubbling up
          try {
            const response = await fetch("/api/v1/auth/logout", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
            });
            if (response.ok) {
              window.location.href = "/";
            } else {
              console.error("Logout failed");
            }
          } catch (error) {
            console.error("Error:", error);
          }
        });
      }
    }

    document.addEventListener("DOMContentLoaded", async function () {
      const response = await fetch("/api/v1/auth/");
      const isLoggedIn = response.ok;
      const response2 = await fetch("/admin/is-admin");
      const isAdmin = await response2.ok;

      initDropDownMenu(isLoggedIn, isAdmin);

      const usernameElement = document.getElementsByClassName("username")[0];

      if (isLoggedIn) {
        const userData = await response.json();
        if (userData.name) {
          usernameElement.innerHTML = `${userData.name} ,היי`;
        }
      }

      const elementsToUpdate = [
        { id: "SavedRoutes", href: isLoggedIn ? "/MyWorkouts" : "/login" },
        { id: "profile", href: isLoggedIn ? "/myprofile" : "/login" },
      ];

      elementsToUpdate.forEach((element) => {
        const elementToUpdate = document.getElementById(element.id);
        if (elementToUpdate) {
          elementToUpdate.setAttribute("href", element.href);
        }
      });
    });
  </script>
</head>

<body>
  <div class="topmenu">
    <a href="/" alt="Home" style="padding: 5px;"><img src="https://i.postimg.cc/cLx3kVnz/Rishon-Fit.png" class="logo" alt="logo" /></a>
    <div class="username-container">
      <h2 style="direction: ltr;" class="username"></h2>
      <div class="hamburger-dropdown">
        <input id="toggle1" type="checkbox" />
        <label class="hamburger1" for="toggle1">
          <div class="top"></div>
          <div class="meat"></div>
          <div class="bottom"></div>
        </label>
        <div class="hamburger-dropdown-menu">
          <ul></ul>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      if (window.location.pathname !== "/welcome") {
        const footer = document.createElement("footer");
        footer.className = "navbar navbar-expand fixed-bottom";
        footer.innerHTML = `
          <div class="container">
            <a id="chooseRoutes" href="/chooseRoute" class="nav__link text-white" aria-label="Search">
              <i class="fas fa-search"></i>
            </a>
            <a id="SavedRoutes" href="/login" class="nav__link text-white" aria-label="Saved Routes">
              <i class="fas fa-thin fa-person-running"></i>
            </a>
            <a id="profile" href="/" class="nav__link text-white" aria-label="Account">
              <i class="fas fa-user-circle"></i>
            </a>
          </div>
        `;
        document.body.appendChild(footer);
      }
    });
  </script>
</body>

</html>