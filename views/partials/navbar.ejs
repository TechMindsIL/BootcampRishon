  <script>
    document.addEventListener('DOMContentLoaded', checkAuth);
    
    async function checkAuth() {
        const response = await fetch('/api/v1/auth/');
        const isLoggedIn = await response.ok; // If response is okay, isLoggedIn is true


        // Update the CSS class based on the login status
        const myWorkouts = document.getElementById('myWorkouts');
        console.log(isLoggedIn);
        if (isLoggedIn) {
            myWorkouts.classList.add('active');
        } else {
            myWorkouts.classList.remove('active');
        }
    };

        async function logout() {
          try {
            // שליחת בקשת POST ל-API לניהול יציאה מהמערכת
            const response = await fetch('/api/v1/auth/logout', {
              method: 'POST',
              credentials: 'include' // מאפשר לשלוח עוגיות עם הבקשה
            });

            if (response.ok) {
              // אם היציאה הצליחה, נבצע ניווט לדף הבית
              window.location.href = "/";
            } else {
              console.error("Logout failed", response.status);
              alert("Logout failed");
            }
          } catch (error) {
            console.error("Error during logout", error);
          }
        }
  </script>